{
  "name": "@ephasme/glassy",
  "version": "1.0.0",
  "description": "A React component for creating a liquid glass effect.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.tsx --format cjs,esm --dts",
    "dev": "tsdown src/index.tsx --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "react",
    "component",
    "glass",
    "liquid",
    "effect"
  ],
  "author": "Loup Peluso <loup.peluso@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ephasme/glassy.git"
  },
  "homepage": "https://github.com/ephasme/glassy#readme",
  "bugs": {
    "url": "https://github.com/ephasme/glassy/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rolldown/binding-wasm32-wasi": "1.0.0-beta.40",
    "@types/react": "^18.3.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "tsdown": "^0.15.4",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.44.1"
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.17.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "react-merge-refs": "^3.0.2"
  }
}
